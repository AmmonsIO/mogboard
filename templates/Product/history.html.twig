{% if stats %}
    <div class="product-price-chart">
        <canvas id="price-history" width="100%" height="240"></canvas>
    </div>
    <script>
        new Chart(document.getElementById("price-history"), {
            type: 'line',
            data: {
                labels: {{ stats.PricePerUnit.Chart.Labels|reverse|json_encode|raw }},
                datasets: [{
                    label: 'Price Per Unit Sales',
                    data: {{ stats.PricePerUnit.Chart.Values|reverse|json_encode|raw }},
                    backgroundColor: 'rgba(80, 80, 80, 0)',
                    borderColor: 'rgba(220, 120, 255, 0.3)',
                    borderWidth: 2,
                    pointBackgroundColor: 'rgba(220, 120, 255, 1)',
                    pointBorderColor: 'rgba(220, 120, 255, 1)',
                    pointBorderWidth: 2,
                    lineTension: 0,
                }],
            },
            options: {
                maintainAspectRatio: false,
                animation: false,
                legend: {
                    display: false
                },
                tooltips: {
                    displayColors: false,
                    position: 'nearest',
                    intersect: false,
                    bodyFontSize: 16,
                    bodyFontColor: "rgba(220, 120, 255, 1)",
                    footerFontSize: 13,
                    footerFontColor: "rgba(220, 120, 255, 0.5)",
                    callbacks: {
                        title: (tooltipItem, data) => {
                            return '#'+ (tooltipItem[0].index + 1) + ' - PRICE PER UNIT';
                        },
                        label: (tooltipItem, data) => {
                            return numeral(tooltipItem.yLabel).format('0,0')
                        },
                        footer: (tooltipItem, data) => {
                            return tooltipItem[0].xLabel;
                        }
                    }
                },
                scales: {
                    xAxes: [{
                        ticks: {
                            display: false
                        }
                    }],
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            callback: (value) => {
                                return numeral(value).format('0,0')
                            }
                        },
                    }]
                },
                layout: {
                    padding: {
                        left: 10,
                        right: 20,
                        top: 10,
                        bottom: 10
                    }
                }
            }
        });
    </script>

    <hr>

    <div class="product-stats-info product-stats-info-header">
        <div>&nbsp;</div>
        <div>Min</div>
        <div>Max</div>
        <div>Avg</div>
    </div>
    <div class="product-stats-info">
        <div>Price Per Unit</div>
        <div>{{ stats.PricePerUnit.Min|number_format }}</div>
        <div>{{ stats.PricePerUnit.Max|number_format }}</div>
        <div>{{ stats.PricePerUnit.Avg|number_format }}</div>
    </div>
    <div class="product-stats-info">
        <div>Price Total</div>
        <div>{{ stats.PriceTotal.Min|number_format }}</div>
        <div>{{ stats.PriceTotal.Max|number_format }}</div>
        <div>{{ stats.PriceTotal.Avg|number_format }}</div>
    </div>

    <hr>

    <div class="product-stats-info3">
        <div>
            Average Sale Speed: <span>{{ stats.General.AvgSaleWait }}</span>
        </div>
    </div>
{% else %}
    <div class="product-no-stats">
        No statistical data available for this item.
    </div>
{% endif %}

<table class="table product-history-table">
    <thead>
        <tr>
            <th data-sort="int">#</th>
            <th data-sort="int">HQ</th>
            <th data-sort="int">Price (Unit)</th>
            <th data-sort="int">QTY</th>
            <th data-sort="string">Buyer</th>
            <th data-sort="int">Date</th>
        </tr>
    </thead>
    <tbody>
        {% for purchase in history.History %}
            <tr>
                <td align="center" class="product-num" width="1%" data-sort-value="{{ loop.index }}">{{ loop.index }}</td>
                <td align="center" class="product-hq" width="1%" data-sort-value="{{ purchase.IsHQ }}">{{ purchase.IsHQ ? '<img src="/i/hq.png">' : '' }}</td>
                <td align="right" class="product-ppu2" data-sort-value="{{ purchase.PricePerUnit }}">
                    <div>
                        {{ purchase.PriceTotal|number_format }}
                    </div>
                    <div>
                        {{ purchase.PricePerUnit|number_format }}
                    </div>
                </td>
                <td align="center" class="product-qty" width="1%" data-sort-value="{{ purchase.Quantity }}">
                    {{ purchase.Quantity|number_format }}
                </td>
                <td class="product-buyer" data-sort-value="{{ purchase.CharacterName }}">
                    {{ purchase.CharacterName|title }}
                </td>
                <td align="right" class="product-date" data-sort-value="{{ purchase.PurchaseDate }}">
                    {{ purchase.PurchaseDate|date }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">None have ever sold!</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<script>$('table.product-history-table').stupidtable();</script>
