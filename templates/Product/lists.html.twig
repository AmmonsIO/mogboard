<div class="box_form">
    <div class="box_flex form">
        <button class="btn_addto_fave {{ faved ? 'on' : '' }}"><i class="icon-heart-o"></i> <span>{{ faved ? 'Faved' : 'Favourite' }}</span></button>
        <button class="btn_addto_list"><i class="xiv-ScheduleDetails"></i> Add to List</button>
    </div>
</div>

{# todo - list modal #}
<div class="modal list_modal">
    <div class="modal_row">
        <div class="modal_form_row_1">
            <h1>Add to list</h1>
        </div>

        {# list form #}
        <form method="post" class="modal_form create_list_form">
            {# hidden stuff #}
            <input type="hidden" id="list_item_id" value="{{ item.ID }}">

            {# Name #}
            <div class="modal_form_row_1">
                <p>Option 1) Create a new list, enter the name below.</p>
            </div>
            <div class="modal_form_row_1">
                <div class="row_flex_2">
                    <div>
                        <input name="list_name" id="list_name" type="text" placeholder="Name" class="full">
                    </div>
                </div>
            </div>

            {# Existing #}
            <div class="modal_form_row_1">
                <p>Option 2) Add to an existing list.</p>
            </div>
            <div class="modal_form_row_2">
                {% if lists %}
                    <select name="list_option" id="list_option" class="full">

                    </select>
                {% else %}
                    <section class="alert-default">
                        <h1>No lists created</h1>
                        <p>Use the name field to create your very first list!</p>
                    </section>
                {% endif %}
            </div>

            <br>

            {# done #}
            <div class="modal_form_end">
                <button type="submit" class="btn-green btn_create_list">Add to list</button>
            </div>

        </form>

    </div>
</div>
