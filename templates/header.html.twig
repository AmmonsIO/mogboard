<header>
    <div class="logo">
        <a href="{{ path('index') }}"><img src="/i/mog.png" height="80"></a>
        <div><span>MOG</span>BOARD</div>
    </div>
    <div class="search">
        <div>
            <div class="search-bar">
                <input type="text" placeholder="Search the Market Board">
                <button id="cl-weapons">Weapons</button>
                <button id="cl-armors">Armors</button>
                <button id="cl-misc">Misc</button>
                <button id="cl-housing">Housing</button>
            </div>
        </div>
        <div class="categories">
            <div class="categories-list cl-weapons">
                {% for cat in resource('ItemSearchCategories').weapons %}
                    <button id="{{ cat.ID }}"><img src="{{ cat.Icon|icon }}">{{ cat.Name }}</button>
                {% endfor %}
            </div>
            <div class="categories-list cl-armors">
                {% for cat in resource('ItemSearchCategories').armor %}
                    <button id="{{ cat.ID }}"><img src="{{ cat.Icon|icon }}">{{ cat.Name }}</button>
                {% endfor %}
            </div>
            <div class="categories-list cl-misc">
                {% for cat in resource('ItemSearchCategories').misc %}
                    <button id="{{ cat.ID }}"><img src="{{ cat.Icon|icon }}">{{ cat.Name }}</button>
                {% endfor %}
            </div>
            <div class="categories-list cl-housing">
                {% for cat in resource('ItemSearchCategories').housing %}
                    <button id="{{ cat.ID }}"><img src="{{ cat.Icon|icon }}">{{ cat.Name }}</button>
                {% endfor %}
            </div>
        </div>
    </div>
    <nav>
        {% if user() %}
            <a href="" class="user">
                {{ user().Username|title }} <img src="{{ user().avatar }}">
            </a>
        {% else %}
            <a href="{{ path('user_login_discord') }}" class="login">Login via Discord</a>
        {% endif %}
    </nav>
</header>
